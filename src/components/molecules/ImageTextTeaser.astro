---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { Icon } from 'astro-icon/components';
import Wrapper from '../utils/Wrapper.astro';

import Text from '../atoms/Text.astro';

interface Props {
  image: {
    src: ImageMetadata;
    alt: string;
  };
  headline: string;
  copy: string;
  className?: string;
  isReverse?: boolean;
}

const { image, headline, copy, className, isReverse = false } = Astro.props;
const isReverseClass = isReverse ? 'flex-row-reverse' : '';
---

<Wrapper variant="primary-light" className={isReverseClass}>
  <div class="gap-6 md:flex md:items-center">
    <div class="-mx-5 -mt-12 mb-12 md:my-0 md:mr-0 lg:-ml-16">
      <Image src={image.src} alt={image.alt} />
    </div>
    <div>
      <div class="flex">
        <Icon
          name="chevron"
          class="min-h-10 min-w-10 -rotate-90 text-mh-yellow xl:min-h-10 xl:min-w-10"
        />
        <Text
          Htmltag="h2"
          className="mb-4"
          size="l"
          text={`${headline}<span class="text-mh-yellow">.</span>`}
          isBlack
        />
      </div>
      <Text Htmltag="p" size="s" text={copy} />
    </div>
  </div>
</Wrapper>
