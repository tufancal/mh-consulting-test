---
import { Icon } from 'astro-icon/components';

interface Props {
  links: {
    url: string;
    text: string;
  }[];
}

const { links } = Astro.props;
---

<footer class="px-5 py-12 lg:px-16 xl:px-36 xl:py-32 2xl:px-36">
  <div class="relative mx-auto max-w-wrapper overflow-hidden md:flex md:items-center">
    <a href="/">
      <Icon name="logo" class="mb-12 h-auto w-52 md:mb-0 xl:w-80" />
      <span class="sr-only">Home | MH Consulting</span>
    </a>
    <nav class="md:w-full">
      <ul class="flex flex-col gap-6 md:flex-row md:justify-end">
        {
          links.map((link) => (
            <li>
              <a
                class="font-default text-xxs uppercase tracking-wider hover:underline hover:underline-offset-4 lg:text-xxs-desktop"
                href={link.url}
              >
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</footer>
